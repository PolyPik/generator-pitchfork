{
  "name": "generator-pitchfork",
  "version": "1.0.0-beta",
  "description": "A Yeoman generator for creating C++ projects that follow the Pitchfork layout.",
  "homepage": "https://github.com/PolyPik/generator-pitchfork#readme",
  "author": {
    "name": "Howard Li",
    "email": "bighorn@pursuitofchallenge.com",
    "url": "pursuitofchallenge.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.7",
    "jest": "^27.5.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^2.1.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "scripts": {
    "test": "jest",
    "pretest": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolyPik/generator-pitchfork.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PolyPik/generator-pitchfork/issues"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "generator-license": "^5.4.0",
    "yeoman-generator": "^4.4.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ],
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  }
}
